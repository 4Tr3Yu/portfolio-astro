---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Bg2 from "../components/ui/Bg.astro";
import "@fontsource-variable/raleway";
import LanguageSwitcher from "../components/ui/LangSwitch.astro";
interface Props {
  title: string;
  description: string;
  lang: string
}

const { title, description, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="{Astro.props.description}"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header lang={lang}/>
    <main class="max-w-[1024px] mx-auto px-4">
      <slot lang={lang} />
    </main>
    <Footer />
	<Bg2 />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Raleway Variable", system-ui, sans-serif;
    background: #13151a;
  }
  body.modal-open {
    overflow: hidden;
  }
</style>
